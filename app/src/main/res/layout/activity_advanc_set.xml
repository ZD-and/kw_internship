<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundblue"
    android:orientation="vertical"
    tools:context=".AdvancSetActivity">

    <include
        layout="@layout/include_back"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">


        <TextView
            android:id="@+id/tv_show_searchcondition"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/title_blue"
            android:ems="10"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="検索条件"
            android:textColor="@color/colorLight"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="職種、業種、会社名など"
            android:textColor="@color/background_holo_dark" />

        <EditText
            android:id="@+id/et_Jobname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_shape"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="勤務地"
            android:textColor="@color/background_holo_dark" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_shape"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_employmentstatus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/title_blue"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="雇用形態"
            android:textColor="@color/colorLight"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/tv_show_employmentstatus"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/ic_shape"
            android:entries="@array/employmentstatus"/>

        <TextView
            android:id="@+id/tv_annualincome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/title_blue"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="推定年収"
            android:textColor="@color/colorLight"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/tv_show_annualincome"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/ic_shape"
            android:entries="@array/annualincome"/>

        <!--<TextView-->
        <!--android:id="@+id/tv_show_annualincome"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="35dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="@drawable/ic_shape"-->
        <!--android:gravity="center"-->
        <!--android:hint="推定年収を選択してください" />-->

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/but_blue"
            android:text="検索"
            android:onClick="Click_Search"
            android:textColor="@color/colorLight" />
    </TableLayout>
</FrameLayout>