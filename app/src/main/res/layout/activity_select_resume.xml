<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    tools:context=".SelectResumeActivity">

    <include
        android:id="@+id/include4"
        layout="@layout/include_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/tl_sendresume"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TextView
                android:id="@+id/tv_ToCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/background_holo_dark"
                android:text="To: 会社名"
                android:textStyle="bold"
                />
            <TableLayout
                android:id="@+id/tl_tl_resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:stretchColumns="1"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="履歴書の選択"
                    android:textColor="@color/background_holo_dark"
                    android:textSize="12sp" />

                <TableRow
                    android:id="@+id/tr_resume1"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <CheckBox
                        android:id="@+id/cb_resume1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/tv_resume1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ic_shape_orange"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="履歴書①"
                        android:textColor="@color/link_text_holo_dark"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_resume2"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <CheckBox
                        android:id="@+id/cb_resume2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/tv_resume2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ic_shape_orange"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="履歴書②"
                        android:textColor="@color/link_text_holo_dark"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_resume3"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <CheckBox
                        android:id="@+id/cb_resume3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/tv_resume3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ic_shape_orange"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="履歴書③"
                        android:textColor="@color/link_text_holo_dark"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="件名"
                android:textColor="@color/background_holo_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_shape"
                android:inputType="text"
                android:maxLines="1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/background_holo_dark"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="本文"
                android:textColor="@color/background_holo_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_shape"
                android:gravity="left|top"
                android:minLines="20"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:text=""
                android:textColor="@color/background_holo_dark"
                android:textSize="12sp" />
        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
