<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundblue"
    android:orientation="vertical"
    tools:context=".AgreementActivity">

    <LinearLayout
        android:id="@+id/tl_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_agreement_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/but_blue"
            android:text=""
            android:textColor="@color/colorLight"
            android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sl_meg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/ic_shape_null">

        <LinearLayout
            android:id="@+id/ll_meg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_agreement_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/background_holo_dark"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/tl_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu_back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="戻る"
            android:textColor="@color/colorLight"
            android:backgroundTint="@color/but_blue"
            />

        <Button
            android:id="@+id/bu_ok"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="同意する"
            android:textColor="@color/colorLight"
            android:backgroundTint="@color/but_blue"
            />
    </LinearLayout>
</LinearLayout>