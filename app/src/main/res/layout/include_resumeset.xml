<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_resumeset_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:background="@drawable/ic_shape_shadow"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/include_resume_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="履歴書名："
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/but_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/include_resume_hopeJobcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="希望職種："
            android:textColor="@color/but_blue"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/include_resume_neareststation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最寄駅："
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/but_blue"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/include_resume_aspiration_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="志望動機・自己RP："
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/but_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/include_resume_hobby_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="趣味・特技："
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/but_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:src="@drawable/ic_add_circle_2"
        />

</LinearLayout>