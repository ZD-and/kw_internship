<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewSignInActivity">

    <include
        layout="@layout/include_back"
        android:id="@+id/include_back"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        >

        <com.linecorp.linesdk.widget.LoginButton
            android:id="@+id/line_login_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/btn_line_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="#00C300"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/line_login_btn2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="12dp"
                android:src="@mipmap/line_60"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="ログイン"
                android:textStyle="bold"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_yahoo_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_bt_yahoo_state"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/yahoo_login_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/yahoo_japan_icon_w_64"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="ログイン"
                android:textStyle="bold"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_facebook_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_bt_facebook_state"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/facebook_login_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="12dp"
                android:src="@mipmap/f_logo_rgb_white_58"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="ログイン"
                android:textStyle="bold"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_twitter_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="#1DA1F2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/twitter_login_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="12dp"
                android:src="@mipmap/twitter_logo_whiteonblue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="40dp"
                android:text="ログイン"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/twitter_login_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="30dp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_login_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>


        <Button
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LogOut"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>




</FrameLayout>

